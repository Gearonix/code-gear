{
  "name": "web-editor",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/web/editor/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/web/editor/**/*.{ts,tsx,js,jsx}"
        ],
        "fix": true
      }
    },
    "build": {
      "executor": "@nx/vite:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/packages/web/editor",
        "skipTypeCheck": true,
        "configFile": "packages/web/editor/.config/vite.ts"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": [
        "coverage/packages/web/editor"
      ],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../../coverage/packages/web/editor"
      }
    }
  }
}
