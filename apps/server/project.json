{
  "name": "server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/server/src",
  "projectType": "application",
  "tags": [
    "app:server",
    "runtime:server"
  ],
  "targets": {
    "prisma:generate": {
      "command": "yarn dlx prisma generate",
      "options": {
        "cwd": "apps/server"
      }
    },
    "prisma:concat": {
      "command": "node prisma/concat-prisma-files.js",
      "options": {
        "cwd": "apps/server"
      }
    },
    "prisma:init": {
      "command": "prisma -v",
      "options": {
        "cwd": "apps/server"
      },
      "dependsOn": [
        "prisma:concat",
        "prisma:generate"
      ]
    },
    "prisma:migrate:development": {
      "command": "yarn dlx prisma migrate dev",
      "options": {
        "cwd": "apps/server",
        "envFile": ".serve.env"
      },
      "dependsOn": [
        "prisma:concat"
      ]
    },
    "prisma:migrate:production": {
      "command": "yarn dlx prisma migrate deploy",
      "options": {
        "cwd": "apps/server",
        "envFile": ".build.env"
      },
      "dependsOn": [
        "prisma:concat"
      ]
    },
    "prisma:types": {
      "command": "yarn dlx @kalissaac/prisma-typegen ./../../packages/nest-common/src/types/_prisma.ts ./prisma/schema.prisma",
      "options": {
        "cwd": "apps/server"
      },
      "dependsOn": [
        "migrate:dev"
      ]
    },
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/server",
        "generatePackageJson": true,
        "main": "apps/server/src/main.ts",
        "tsConfig": "apps/server/tsconfig.app.json",
        "assets": [
          "apps/server/src/assets",
          {
            "glob": "schema.prisma",
            "input": "apps/server/prisma",
            "output": "prisma"
          }
        ],
        "isolatedConfig": true,
        "webpackConfig": "apps/server/.config/webpack.ts",
        "skipTypeCheck": true
      },
      "configurations": {
        "development": {},
        "production": {}
      },
      "dependsOn": ["prisma:concat"]
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "server:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "server:build:development"
        },
        "production": {
          "buildTarget": "server:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/server/**/*.ts"
        ],
        "fix": true
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/server/.config/jest.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  }
}
