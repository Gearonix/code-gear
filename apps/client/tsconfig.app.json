{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "baseUrl": ".",
    "jsxImportSource": "preact",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "react": ["../../node_modules/preact/compat"],
      "react-dom": ["../../node_modules/preact/compat"],
    }
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*_spec.ts",
    "**/*.spec.tsx",
    "**/*_spec.tsx",
    "public/*"
  ],
  "include": ["**/*.ts", "**/*.tsx"]
}
