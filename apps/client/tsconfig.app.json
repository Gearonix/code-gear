{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "baseUrl": ".",
    "jsxImportSource": "preact",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@code-gear/api/common": ["../../libs/api/common/src/index.ts"],
      "@code-gear/api/services": ["../../libs/api/services/src/index.ts"],
      "@code-gear/web/editor": ["../../libs/web/editor/src/app/index.ts"],
      "@code-gear/web/shared": ["../../libs/web/shared/src/index.ts"],
      "@code-gear/web/ui": ["../../libs/web/ui/src/index.ts"],
      "@code-gear/config": ["../../libs/config/src/index.ts"],
      "react": ["../../node_modules/preact/compat"],
      "react-dom": ["../../node_modules/preact/compat"],
    }
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*_spec.ts",
    "**/*.spec.tsx",
    "**/*_spec.tsx",
    "public/*"
  ],
  "include": ["**/*.ts", "**/*.tsx", "../../libs/config/src/vite"]
}
