{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "baseUrl": ".",
    "jsxImportSource": "preact",
    "skipLibCheck": true
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*_spec.ts",
    "**/*.spec.tsx",
    "**/*_spec.tsx",
    "public/*"
  ],
  "include": ["**/*.ts", "**/*.tsx"]
}
